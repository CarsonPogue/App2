# ============================================
# MOOVE Backend - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================

# -------------------- Server --------------------
# Environment: development | production | test
NODE_ENV=development

# Port the server listens on
PORT=3001

# -------------------- Database (REQUIRED) --------------------
# PostgreSQL connection string with PostGIS
# Format: postgresql://username:password@host:port/database
# For local development:
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/moove

# -------------------- Redis (Optional) --------------------
# Redis connection string for caching and sessions
# Leave empty to disable Redis features
REDIS_URL=redis://localhost:6379

# -------------------- JWT Secrets (REQUIRED) --------------------
# Generate secure secrets with: openssl rand -base64 64
# IMPORTANT: Must be at least 32 characters!
# NEVER use the example values in production!
JWT_SECRET=
JWT_REFRESH_SECRET=

# -------------------- OAuth - Google (Optional) --------------------
# Google OAuth credentials from Google Cloud Console
# Required for "Sign in with Google" feature
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_CALLBACK_URL=http://localhost:3001/api/v1/auth/oauth/google/callback

# -------------------- OAuth - Apple (Optional) --------------------
# Apple Sign In credentials from Apple Developer Portal
# Required for "Sign in with Apple" feature
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# -------------------- Third-Party APIs (Optional) --------------------
# These APIs power event discovery features
# The app works without them but with limited functionality

# Ticketmaster Discovery API
# Get key at: https://developer.ticketmaster.com/
TICKETMASTER_API_KEY=

# SeatGeek API
# Get credentials at: https://seatgeek.com/account/develop
SEATGEEK_CLIENT_ID=
SEATGEEK_CLIENT_SECRET=

# Google Places API
# Get key at: https://console.cloud.google.com/apis/credentials
# Required for nearby places feature
GOOGLE_PLACES_API_KEY=

# -------------------- Email (Optional) --------------------
# SendGrid API for transactional emails
# Get key at: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=
FROM_EMAIL=noreply@themoove.app

# -------------------- Monitoring (Optional) --------------------
# Sentry DSN for error tracking
# Get DSN at: https://sentry.io/
SENTRY_DSN=

# -------------------- CORS --------------------
# Frontend URL for CORS configuration
# In production, set to your actual frontend domain
FRONTEND_URL=http://localhost:8081
