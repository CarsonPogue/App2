# Server
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/moove

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (generate with: openssl rand -base64 64)
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here

# OAuth - Google
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_CALLBACK_URL=http://localhost:3001/api/v1/auth/oauth/google/callback

# OAuth - Apple
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# Third-Party APIs
TICKETMASTER_API_KEY=your-ticketmaster-api-key
SEATGEEK_CLIENT_ID=your-seatgeek-client-id
SEATGEEK_CLIENT_SECRET=your-seatgeek-client-secret
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Email
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@moove.app

# Sentry (optional)
SENTRY_DSN=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8081
