# ============================================
# MOOVE - Docker Compose Environment Variables
# ============================================
# Copy this file to .env in the moove/ directory
# These variables are used by docker-compose.yml
# NEVER commit .env to version control!
# ============================================

# -------------------- PostgreSQL --------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_DB=moove
POSTGRES_PORT=5432

# -------------------- Redis --------------------
REDIS_PORT=6379

# -------------------- Backend --------------------
NODE_ENV=development
BACKEND_PORT=3001

# JWT Secrets (REQUIRED)
# Generate with: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_at_least_32_characters_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_at_least_32_characters_here

# -------------------- OAuth (Optional) --------------------
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_CALLBACK_URL=http://localhost:3001/api/v1/auth/oauth/google/callback

APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# -------------------- Third-Party APIs (Optional) --------------------
TICKETMASTER_API_KEY=
SEATGEEK_CLIENT_ID=
SEATGEEK_CLIENT_SECRET=
GOOGLE_PLACES_API_KEY=

# -------------------- Email (Optional) --------------------
SENDGRID_API_KEY=
FROM_EMAIL=noreply@themoove.app

# -------------------- Monitoring (Optional) --------------------
SENTRY_DSN=

# -------------------- CORS --------------------
FRONTEND_URL=http://localhost:8081
